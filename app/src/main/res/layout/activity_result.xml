<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ic_main_background"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <TextView
        android:id="@+id/titleResult"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Congratulation,\n Here your South African ID"
        android:textAlignment="center"
        android:textSize="25dp"
        app:layout_constraintBottom_toTopOf="@id/saIdTvResult"
        android:layout_marginBottom="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />

<TextView
    android:id="@+id/saIdTvResult"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textSize="45dp"
    android:textStyle="bold"
    tools:text = "12334532534"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintBottom_toBottomOf="parent" />

    <Button
        android:id="@+id/reScanButton"
        android:layout_width="198dp"
        android:layout_height="63dp"
        android:layout_marginTop="70dp"
        android:background="@drawable/ic_scan_now"
        android:text="RE-SCAN"
        android:textAlignment="center"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/saIdTvResult" />


</android.support.constraint.ConstraintLayout>